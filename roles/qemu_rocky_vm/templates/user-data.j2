#cloud-config
hostname: {{ vm_name }}
manage_etc_hosts: true

users:
  - name: {{ vm_ssh_user }}
    sudo: ['ALL=(ALL) NOPASSWD:ALL']
    shell: /bin/bash
    ssh_authorized_keys:
      - {{ vm_ssh_pubkey }}

ssh_pwauth: false

package_upgrade: true
packages:
  - vim
  - git
  - qemu-guest-agent

runcmd:
  - systemctl enable --now qemu-guest-agent
